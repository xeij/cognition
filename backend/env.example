# Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# DynamoDB Table Names
FACTS_TABLE_NAME=cognition-facts
USERS_TABLE_NAME=cognition-users
INTERACTIONS_TABLE_NAME=cognition-interactions
CATEGORIES_TABLE_NAME=cognition-categories

# For local development (optional)
DYNAMODB_LOCAL_ENDPOINT=http://localhost:8000

# API Configuration
API_BASE_URL=http://localhost:3000/api
MAX_REQUEST_SIZE=10mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:3000

# Database Configuration
DB_BATCH_SIZE=25
DB_MAX_RETRIES=3

# Logging
LOG_FILE_PATH=logs/
LOG_ROTATION_DAYS=7

# Feature Flags
ENABLE_RECOMMENDATION_CACHE=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true 