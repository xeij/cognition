# Python Wikipedia Scraper Environment Configuration

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# DynamoDB Table Names
FACTS_TABLE_NAME=cognition-facts
USERS_TABLE_NAME=cognition-users
INTERACTIONS_TABLE_NAME=cognition-interactions
CATEGORIES_TABLE_NAME=cognition-categories

# Scraper Configuration
SCRAPER_MAX_ARTICLES_PER_CATEGORY=10
SCRAPER_MAX_FACTS_PER_ARTICLE=5
SCRAPER_RATE_LIMIT_DELAY=1
SCRAPER_BATCH_SIZE=25

# Wikipedia API Configuration
WIKIPEDIA_LANGUAGE=en
WIKIPEDIA_USER_AGENT=CognitionApp/1.0

# Content Processing
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=2000
MIN_READING_TIME=1
MAX_READING_TIME=15

# Quality Filters
MIN_FLESCH_SCORE=30
MAX_COMPLEX_WORD_RATIO=0.25
ENABLE_LANGUAGE_DETECTION=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=wikipedia_scraper.log
ENABLE_PROGRESS_BAR=true

# Development Settings
DEBUG_MODE=false
TEST_MODE=false
DRY_RUN=false 